<div class="container">
    <div class="heading">
        <h1>新規登録</h1>
    </div>

    <% if @user.errors.full_messages %>
    <div class="error-alert">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li class='error-message'><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
    <div class="col-md-5 shadow-sm px-3 pb-5" style="background-color:#EEEEEE;">
    <%= form_with model: @user, url: users_create_path, data: { turbo: false } do |f|%>
      <h5 class="fw-bold border-bottom my-3 pb-2"></i>ログインフォーム</h5>
      <div class="px-4 mt-2">
        <div class="col-12 mt-4">
          <%= f.label :name, "名前（ニックネーム）", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="px-4 mt-2">
        <div class="col-12 mt-4">
          <%= f.label :email, "メールアドレス", class: "form-label"  %>
          <%= f.email_field :email, class: "form-control"  %>
        </div>
      </div>
      <div class="px-4 mt-2">
        <div class="col-12 mt-4">
          <%= f.label :password, "パスワード", class: "form-label"  %>
          <%= f.password_field :password, class: "form-control"  %>
        </div>
      </div>
      <div class="text-center">
        <%= f.submit "登録する", class: "btn btn-lg btn-primary mt-4 px-5"%>
      </div>

    <% end %>
    <%= link_to("ログインページに戻る", login_path) %>
    </div>

</div>