<% provide(:title, "新規登録") %>
<div class="container">
    <% if @user.errors.full_messages %>
    <div class="error-alert">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li class='error-message'><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
    <div class="row justify-content-center">
    <h2 class="fw-bold text-center border-bottom border-secondary my-4 pb-4">新規登録</h2>
      <div class="col-md-5 shadow-sm px-3 pb-5" style="background-color:#EEEEEE;">
      <%= form_with model: @user, data: { turbo: false } do |f|%>
        <h5 class="fw-bold border-bottom my-3 p-2">ユーザー情報を入力してください</h5>
        <div class="px-4 mt-2">
          <div class="col-12 mt-4">
            <%= f.label :name, "名前（ニックネーム）", class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="px-4 mt-2">
          <div class="col-12 mt-4">
            <%= f.label :email, "メールアドレス", class: "form-label"  %>
            <%= f.email_field :email, class: "form-control"  %>
          </div>
        </div>
        <div class="px-4 mt-2">
          <div class="col-12 mt-4">
            <%= f.label :password, "パスワード", class: "form-label"  %>
            <%= f.password_field :password, class: "form-control"  %>
          </div>
          <div class="col-12 mt-4">
            <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label"  %>
            <%= f.password_field :password_confirmation, class: "form-control"  %>
          </div>
        </div>
        <div class="text-center">
          <%= f.submit "登録する", class: "btn btn-lg btn-primary mt-4 px-5"%>
        </div>
      <% end %>
      </div>
      <%= link_to "ログインページに戻る", login_path, class: "mt-5 text-center" %>
    </div>
      
</div>