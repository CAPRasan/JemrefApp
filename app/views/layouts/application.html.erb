<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>
  <body>
    <%= render "layouts/header" %>

  <main class="container my-3">
    <% if flash[:notice] %>
      <div class="alert alert-info" role="alert">
        ℹ️ <%= flash[:notice] %>
      </div>
    <% end %> 
    <div class="container-fluid">
        <div class="main-contents-wrapper">
          <%= yield %>
        </div>
    </div>
  </main>
  <%= render "layouts/footer" %>
  </body>
</html>
