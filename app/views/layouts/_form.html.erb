<%= form_with model: @user, data: { turbo: false } do |f|%>
        <div class="px-4 mt-2">
          <div class="col-12 mt-4">
            <%= f.label :name, "名前（ニックネーム）", class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="px-4 mt-2">
          <div class="col-12 mt-4">
            <%= f.label :email, "メールアドレス", class: "form-label"  %>
            <%= f.email_field :email, class: "form-control"  %>
          </div>
        </div>
        <div class="px-4 mt-2">
          <div class="col-12 mt-4">
            <%= f.label :password, "パスワード", class: "form-label"  %>
            <%= f.password_field :password, class: "form-control"  %>
          </div>
          <div class="col-12 mt-4">
            <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label"  %>
            <%= f.password_field :password_confirmation, class: "form-control"  %>
          </div>
        </div>
        <div class="text-center">
          <%= f.submit yield(:button_text), class: "btn btn-lg btn-primary mt-4 px-5"%>
        </div>
<% end %>