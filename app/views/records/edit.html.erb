<main>
  <div class="container">
    <div class="main-wrapper">
      <nav class="side-menu">

      <h1>Navigation</h1>
        <ul>
            <li>
                <%= link_to("ホーム・書誌情報入力", "/records/new") %>
            </li>
            <li>
                <%= link_to("登録書誌表示・検索", "/records/index") %>
            </li>
            <li>
                <a href="#">利用方法</a>
            </li>
            <li>
                <%= link_to("ログアウト", "/logout", {method: "post"}) %>
            </li>
            <li>
                <a href="#">設定</a>
            </li>
        </ul>
        <div class="information-wrapper">
            <h2>インフォメーション</h2>
        </div>
        <div class="contact-wrapper">
            <h2>お問い合わせ</h2>
        </div>
      </nav>
    
      <!-- 検索画面 -->
      <section>
        <div class="main contents">
            <h1>書誌情報変更</h1>
            
              <!-- 出力されない？ -->
              <% if @record.errors.full_messages %>
                <div class="error-alert">
                <ul>
                  <% @record.errors.full_messages.each do |message| %>
                  <li class='error-message'><%= message %></li>
                  <% end %>
                </ul>
                </div>
              <% end %>
              
            
            <%= link_to("一覧にもどる", "/records/index") %>

            <%= form_tag("/records/#{@record.id}/update", {method: "post"}) do %>
              <div class="bibinfo-edit-form">

                <p>形態: <%= @record.type %>"</p>
                <label for="author_name">著者名:</label>
                <input type="text" id="author_name" name="author_name" value="<%= @record.author_name %>">
                <label for="main_title">主題:</label>
                <input type="text" id="main_title" name="main_title" value="<%= @record.main_title %>">
                <label for="sub_title">副題:</label>
                <input type="text" id="sub_title" name="sub_title" value="<%= @record.sub_title %>">
                <label for="publish_date">出版年:</label>
                <input type="integer" id="publish_date" name="publish_date" value="<%= @record.publish_date %>">
                <label for="publisher">出版社:</label>
                <input type="text" id="publisher" name="publisher" value="<%= @record.publisher %>">
                <label for="compiled_by">編者:</label>
                <input type="text" id="compiled_by" name="compiled_by" value="<%= @record.compiled_by %>">
                <label for="publication_main_title">収録物名:主題</label>
                <input type="text" id="publication_main_title" name="publication_main_title" value="<%= @record.publication_main_title %>">
                <label for="publication_sub_title">副題</label>
                <input type="text" id="publication_sub_title" name="publication_sub_title" value="<%= @record.publication_sub_title %>">
                <label for="volume">巻:</label>
                <input type="integer" id="volume" name="volume" value="<%= @record.volume %>">
                <label for="no">号:</label>
                <input type="integer" id="no" name="no" value="<%= @record.no %>">
                <label for="volume_other_form">巻号その他:</label>
                <input type="string" id="volume_other_form" name="volume_other_form" value="<%= @record.volume_other_form%>">
                
                <label for="memo">メモ:</label>
                <textarea id="memo" name="memo" value="<%= @record.memo %>"></textarea>
                # のちに選べるようにする
                <label for="status">状態:（0=既読、1=未読、2=オミット）</label>
                <input type="integer" id="status" name="status" value="<%= @record.status %>">
                <input type="submit" value="変更">

              </div>
            <% end %>
            
        </div>
        <div class="delete-form">
        <%= button_to "書誌情報を削除する", "/records/#{@record.id}/destroy", {method: "post" } %>
        </div>
      </section>
    </div>
  </div>
</main>