                <input type="text" id="sub_title" name="sub_title" value="<%= @paper.sub_title %>">
                <label for="publish_date">出版年:</label>
                <input type="integer" id="publish_date" name="publish_date" value="<%= @paper.publish_date %>">
                <label for="publisher">出版社:</label>
                <input type="text" id="publisher" name="publisher" value="<%= @paper.publisher %>">
                <p>収録物</p>
                <label for="compiled_by">雑誌編者:</label>
                <input type="text" id="compiled_by" name="compiled_by" value="<%= @paper.compiled_by %>">
                <label for="publication_main_title">収録雑誌名:主題</label>
                <input type="text" id="publication_main_title" name="publication_main_title" value="<%= @paper.publication_main_title %>">
                <label for="publication_sub_title">副題</label>
                <input type="text" id="publication_sub_title" name="publication_sub_title" value="<%= @paper.publication_sub_title %>">
                <label for="volume">巻:</label>
