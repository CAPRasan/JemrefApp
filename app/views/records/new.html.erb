
        <div class="main-contents mx-3">
            <h2>書誌情報登録</h2>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <button class="nav-link active" id="book-tab" data-bs-toggle="tab" data-bs-target="#book-tab-pane" type="button" role="tab" aria-controls="book-tab-pane" aria-selected="true">著書</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="paper-tab" data-bs-toggle="tab" data-bs-target="#paper-tab-pane" type="button" role="tab" aria-controls="paper-tab-pane" aria-selected="false">雑誌論文</button>
              </li>
              <li class="nav-item" role="presentation">
                <button class="nav-link" id="compilation-tab" data-bs-toggle="tab" data-bs-target="#compilation-tab-pane" type="button" role="tab" aria-controls="compilation-tab-pane" aria-selected="false">編著論文</button>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade show active" id="book-tab-pane" role="tabpanel" aria-labelledby="book-tab" tabindex="0">

              </div>

              <div class="tab-pane fade" id="paper-tab-pane" role="tabpanel" aria-labelledby="paper-tab" tabindex="0">
              </div>

              <div class="tab-pane fade" id="compilation-tab-pane" role="tabpanel" aria-labelledby="compilation-tab" tabindex="0">
              <%= form_with model: @book, url: records_create_book_path, local: true do |f| %>
                
                <div class="input-group mb-3">
                <h5 class="fw-bold col-12">論文情報</h5>
                  <form class="row g-3">
                  <div class="col-6 mt-5 me-5">
                    <label for="inputAuthorName" class="form-label">著者名</label>
                    <input type="text" class="form-control" id="inputAuthorName" name="author_name">
                  </div>
                  <div class="col-2 mt-5">
                    <label for="inputPublishDate" class="form-label">刊行年</label>
                    <input type="number" class="form-control" id="inputPublishDate" name="publish_date" value="1980">
                  </div>
                  <div class="col-md-6 mt-3 pe-4">
                    <label for="inputMainTitle" class="form-label">主題</label>
                    <input type="text" class="form-control" id="inputMainTitle" name="main_title">
                  </div>
                  <div class="col-md-6 mt-3">
                    <label for="inputSubTitle" class="form-label">副題</label>
                    <input type="text" class="form-control" id="inputSubTitle" name="sub_title">
                  </div>
                  <h5 class="fw-bold col-12">収録物情報</h5>
                  <div class="col-8 mt-5">
                    <label for="inputCompiler" class="form-label">編者名</label>
                    <input type="text" class="form-control" id="inputCompiler" name="compiled_by">
                  </div>
                  <div class="col-md-6 mt-3 pe-4">
                    <label for="inputCompilationMainTitle" class="form-label">主題</label>
                    <input type="text" class="form-control" id="inputCompilationMainTitle" name="publication_main_title">
                  </div>
                  <div class="col-md-6 mt-3">
                    <label for="inputCompilationSubTitle" class="form-label">副題</label>
                    <input type="text" class="form-control" id="inputCompilationSubTitle" name="publication_sub_title">
                  </div>

                  <div class="col-12">
                    <label for="inputAddress2" class="form-label">Address 2</label>
                    <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
                  </div>
                  <div class="col-md-6">
                    <label for="inputCity" class="form-label">City</label>
                    <input type="text" class="form-control" id="inputCity">
                  </div>
                  <div class="col-md-2">
                    <label for="inputZip" class="form-label">Zip</label>
                    <input type="text" class="form-control" id="inputZip">
                  </div>
                  <div class="col-md-4">
                    <label for="inputState" class="form-label">State</label>
                    <select id="inputState" class="form-select">
                      <option selected>Choose...</option>
                      <option>...</option>
                    </select>
                  </div>
                  <div class="col-12">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="gridCheck">
                      <label class="form-check-label" for="gridCheck">
                        Check me out
                      </label>
                    </div>
                  </div>
                  <div class="col-12">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                  </div>
                </form>
                </div>
              <% end %>
              </div>
            </div>

            <%= form_with model: @book, url: records_create_book_path, local: true do |f| %>
              <div class="bibinfo-entry-form">
              <%= f.label :author_name, "著書 著者名:" %>
              <%= f.text_field :author_name %>
              <%= f.label :main_title, "主題:" %>
              <%= f.text_field :main_title %>
              <%= f.label :sub_title, "副題:" %>
              <%= f.text_field :sub_title %>
              <%= f.label :volume_other_form, "巻号その他:" %>
              <%= f.text_field :volume_other_form %>
              <%= f.label :publish_date, "出版年" %>
              <%= f.number_field :publish_date %>
              <%= f.label :publisher, "出版社" %>
              <%= f.text_field :publisher %>
              <%= f.label :memo, "メモ" %>
              <%= f.text_area :memo %>
              <%= f.label :status, "状態:" %>
              <%= f.text_field :status %>
              <%= f.submit "著書として登録" %>
              </div>
            <% end %>

            <%= form_with model: @paper, url: records_create_paper_path, local: true do |f| %>
              <div class="bibinfo-entry-form">
                <%= f.label :author_name, "雑誌論文 著者名:" %>
                <%= f.text_field :author_name %>
                <%= f.label :main_title, "主題:" %>
                <%= f.text_field :main_title %>
                <%= f.label :sub_title, "副題:" %>
                <%= f.text_field :sub_title %>
                <%= f.label :publish_date, "出版年" %>
                <%= f.number_field :publish_date %>
                <%= f.label :publisher, "出版社" %>
                <%= f.text_field :publisher %>
                <p>収録物</p>
                <%= f.label :compiled_by, "編者" %>
                <%= f.text_field :compiled_by %>
                <%= f.label :publication_main_title, "主題:" %>
                <%= f.text_field :publication_main_title  %>
                <%= f.label :publication_sub_title, "副題:" %>
                <%= f.text_field :publication_sub_title  %>
                <%= f.label :volume, "巻:" %>
                <%= f.number_field :volume %>
                <%= f.label :no, "号:" %>
                <%= f.number_field :no %>
                <%= f.label :volume_other_form, "巻号その他:" %>
                <%= f.text_field :volume_other_form %>
                <%= f.label :memo, "メモ" %>
                <%= f.text_area :memo  %>
                <%= f.label :status, "状態:" %>
                <%= f.text_field :status %>
                <%= f.submit "論文として登録" %>
              </div>
            <% end %>

            <%= form_with model: @compilation, url: records_create_compilation_path, local: true do |f| %>
              <div class="bibinfo-entry-form">
                <%= f.label :author_name, "編著論文 著者名:" %>
                <%= f.text_field :author_name %>
                <%= f.label :main_title, "主題:" %>
                <%= f.text_field :main_title %>
                <%= f.label :sub_title, "副題:" %>
                <%= f.text_field :sub_title %>
                <%= f.label :publish_date, "出版年" %>
                <%= f.number_field :publish_date %>
                <%= f.label :publisher, "出版社" %>
                <%= f.text_field :publisher %>
                <p>収録物</p>
                <%= f.label :compiled_by, "編者" %>
                <%= f.text_field :compiled_by %>
                <%= f.label :publication_main_title, "主題:" %>
                <%= f.text_field :publication_main_title %>
                <%= f.label :publication_sub_title, "副題:" %>
                <%= f.text_field :publication_sub_title %>
                <%= f.label :volume, "巻:" %>
                <%= f.number_field :volume %>
                <%= f.label :no, "号:" %>
                <%= f.number_field :no %>
                <%= f.label :volume_other_form, "巻号その他:" %>
                <%= f.text_field :volume_other_form %>
                <%= f.label :memo, "メモ" %>
                <%= f.text_area :memo %>
                <%= f.label :status, "状態:" %>
                <%= f.text_field :status %>
                <%= f.submit "編著として登録" %>
              </div>
            <% end %>
        </div>

