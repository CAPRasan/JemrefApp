
        <div class="main contents">
            <h1>書誌情報登録</h1>

            <%= form_tag("/records/create_book", {method: "post"}) do %>
              <div class="bibinfo-entry-form">
                <label for="author_name">著書 著者名:</label>
                <input type="text" id="author_name" name="author_name" value="<%= @book.author_name %>">
                <label for="main_title">主題:</label>
                <input type="text" id="main_title" name="main_title" value="<%= @book.main_title %>">
                <label for="sub_title">副題:</label>
                <input type="text" id="sub_title" name="sub_title" value="<%= @book.sub_title %>">
                <label for="volume_other_form">巻号その他:</label>
                <input type="string" id="volume_other_form" name="volume_other_form" value="<%= @book.volume_other_form %>">
                <label for="publish_date">出版年:</label>
                <input type="integer" id="publish_date" name="publish_date" value="<%= @book.publish_date %>">
                <label for="publisher">出版社:</label>
                <input type="text" id="publisher" name="publisher" value="<%= @book.publisher %>">
                <label for="memo">メモ:</label>
                <textarea id="memo" name="memo" value="<%= @book.memo %>"></textarea>
                <label for="status">状態:（0=既読、1=未読、2=オミット）</label>
                <input type="integer" id="status" name="status" value="<%= @book.status %>">
                <input type="submit" value="著書として登録">
              </div>
            <% end %>

            <%= form_tag("/records/create_paper", {method: "post"}) do %>
              <div class="bibinfo-entry-form">
                <label for="author_name">雑誌論文 論文著者名:</label>
                <input type="text" id="author_name" name="author_name" value="<%= @paper.author_name %>">
                <label for="main_title">主題:</label>
                <input type="text" id="main_title" name="main_title" value="<%= @paper.main_title %>">
