<main>
  <div class="container">
    <div class="main-wrapper">
      <nav class="side-menu">
    #   後ほど、render :pertialで置き換え
      <h1>Navigation</h1>
        <ul>
            <li>
              <%= link_to("ホーム・書誌情報入力", "/records/new") %>    
            </li>
            <li>
                <%= link_to("登録書誌表示・検索", "/records/index") %>
            </li>
            <li>
                <a href="#">利用方法</a>
            </li>
            <li>
                <%= link_to("ログアウト", "/logout", {method: "post"}) %>
            </li>
            <li>
                <a href="#">設定</a>
            </li>
        </ul>
        <div class="information-wrapper">
            <h2>インフォメーション</h2>
        </div>
        <div class="contact-wrapper">
            <h2>お問い合わせ</h2>
        </div>
      </nav>
    
      <section class="main-section">
        <div class="main-contents">
            <h1>登録書誌表示・検索</h1>
            
            <div class="bib-list">
              <% @current_user.records.each do |record| %>
                <div class="record-item">
                  <p>------------------------</p>
                  <% if record.type == "Compilation" || record.type == "Paper" %>
                    <h3><span>📃</span><%=record.author_name %>（<%= record.publish_date %>） 「<%= record.get_title %>」</h3>
                    <p><%= record.compiled_by %>編『<%= record.get_publication_title %>』<%= record.get_volume_and_number %><%= record.volume_other_form %>, <%= record.publisher %> （状態<%= record.status %>）</p>
                  <% elsif record.type == "Book" %>
                    <h3><span>📕</span><%=record.author_name %>（<%= record.publish_date %>） 『<%= record.get_title %>』<%= record.volume_other_form %></h3>
                    <p><%= record.publisher %> （状態<%= record.status %>）</p>
                  <% end %>
                  <div class="update-link">
                    <%= link_to("更新/削除", "/records/#{record.id}/edit") %>
                  </div>
                </div>
              <% end %>
            </div>

        </div>
      </section>
    </div>
  </div>
</main>
